<div class="row justify-content-md-center">
  <div class="col-4">
    <div class="card text-center mt-4 shadow mb-5 bg-white rounded">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to category.name,
                      category_path(category),
                      class: 'text-success' %>
        </h5>
        <%= link_to 'View',
                    category_path(category),
                    class: 'btn btn-outline-success' %>
        <% if logged_in? &&
               current_user.admin? %>
          <%= link_to 'Edit',
                      edit_category_path(category),
                      class: 'btn btn-outline-info' %>
          <%= link_to 'Delete',
                      category_path(category),
                      class: 'btn btn-outline-danger',
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
      <div class="card-footer text-muted">
        <small>
          Created at <%= time_ago_in_words(category.created_at) %> ago,
          edited <%= time_ago_in_words(category.updated_at) %> ago
        </small>
      </div>
    </div>
  </div>
</div>
